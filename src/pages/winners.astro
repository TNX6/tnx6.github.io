          </svg>

          <!-- üüß ÿßŸÑÿ•ÿ∑ÿßÿ± (180 √ó 250 ŸÖÿ´ŸÑ king) -->
          <div
            class="card relative w-[180px] h-[250px] border border-[#c29200]/35 
                   rounded-[26px] bg-black/25 shadow-lg pt-10
                   transition-transform duration-300 hover:scale-[1.05]
                   flex flex-col items-center"
          >
            <!-- ÿßŸÑÿµŸàÿ±ÿ© + ÿßŸÑÿ•ÿ∑ÿßÿ± ÿßŸÑÿØÿßÿÆŸÑŸä -->
            <div class="inner-img-wrapper w-[120px] h-[120px] rounded-2xl overflow-hidden border border-[#c29200]/40 shadow-md mb-4 transition-transform duration-300">
              <img 
                src={winner.avatar}
                class="w-full h-full object-cover"
                alt={winner.name}
              />
            </div>

            <!-- ÿßŸÑÿßÿ≥ŸÖ -->
            <p class="text-xl font-bold text-[#ffda6a] tracking-wide text-center"
               style="text-shadow: 0 0 6px rgba(255, 215, 0, 0.35);">
              {winner.name}
            </p>
          </div>

        </div>
      ))}

    </div>
  </section>

  <!-- üî• ÿ™ŸÉÿ®Ÿäÿ± ÿßŸÑÿµŸàÿ±ÿ© + ÿßŸÑÿ•ÿ∑ÿßÿ± ŸÖÿπŸãÿß -->
  <script>
    document.querySelectorAll(".card").forEach((card) => {

      const img = card.querySelector(".inner-img-wrapper")
      const crown = card.parentElement.querySelector(".crown")

      card.addEventListener("mouseenter", () => {
        img.style.transform = "scale(1.05)"
        crown.style.transform = "scale(1.1)"
      })

      card.addEventListener("mouseleave", () => {
        img.style.transform = "scale(1)"
        crown.style.transform = "scale(1)"
      })

    })
  </script>
</Layout>

---
import Layout from '~/layouts/PageLayout.astro'

const winners = [
  {
    name: "Fawaz",
    avatar: "/TEST/assets/images/tnx-min.jpg",
  },
]
---
<Layout metadata={{ title: "ÿßŸÑŸÅÿßÿ¶ÿ≤ŸäŸÜ ‚Äî TNX6", ignoreTitleTemplate: true }}>
  <section class="py-24 px-6 text-white">

    <h1 class="text-5xl font-extrabold text-center mb-16 bg-gradient-to-r 
      from-[#ffda6a] to-[#c29200] bg-clip-text text-transparent drop-shadow-lg">
      ÿßŸÑŸÅÿßÿ¶ÿ≤ŸàŸÜ
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-12 max-w-3xl mx-auto">

      {winners.map((winner) => (
        <div class="relative flex flex-col items-center">

          <!-- üëë ÿßŸÑÿ™ÿßÿ¨ -->
          <svg 
            viewBox="0 0 24 24"
            class="crown w-10 h-10 absolute -top-[22px] z-30 text-[#ffda6a]
                   transition-all duration-300"
            fill="none"
            stroke="#ffda6a"
            stroke-width="2.2"
            stroke-linecap="round"
            stroke-linejoin="round"
            style="filter: drop-shadow(0 0 6px rgba(255, 215, 0, 0.4));"
          >
            <path d="M5 16h14v-6l-3 2-3-5-3 5-3-2v6z" />
          </svg>

          <!-- üüß ÿßŸÑÿ•ÿ∑ÿßÿ± (ŸÜŸÅÿ≥ ÿ≠ÿ¨ŸÖ king ÿ®ÿßŸÑÿ∂ÿ®ÿ∑) -->
          <div
            class="group card relative w-[180px] h-[250px] border border-[#c29200]/35 
                   rounded-[26px] bg-black/25 shadow-lg pt-10
                   transition-all duration-300 hover:scale-[1.05]"
          >
            <!-- ÿßŸÑÿµŸàÿ±ÿ© ÿßŸÑÿØÿßÿÆŸÑŸäÿ© -->
            <div class="w-[120px] h-[120px] mx-auto rounded-2xl overflow-hidden border border-[#c29200]/40 shadow-md mb-4">
              <img 
                src={winner.avatar}
                class="w-full h-full object-cover transition-all duration-300 group-hover:scale-[1.07]"
                alt={winner.name}
              />
            </div>

            <!-- ÿßŸÑÿßÿ≥ŸÖ -->
            <p class="text-xl font-bold text-[#ffda6a] text-center tracking-wide"
               style="text-shadow: 0 0 6px rgba(255, 215, 0, 0.35);">
              {winner.name}
            </p>
          </div>
        </div>
      ))}

    </div>
  </section>

  <!-- ÿ™ŸÉÿ®Ÿäÿ± ÿßŸÑÿ™ÿßÿ¨ ÿ®ÿØŸàŸÜ ÿ™ÿ≠ÿ±ŸäŸÉŸá -->
  <script>
    document.querySelectorAll(".card").forEach((card) => {
      const crown = card.parentElement.querySelector(".crown")
      card.addEventListener("mouseenter", () => {
        crown.style.transform = "scale(1.1)"
      })
      card.addEventListener("mouseleave", () => {
        crown.style.transform = "scale(1)"
      })
    })
  </script>
</Layout>

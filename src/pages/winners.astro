---
import Layout from '~/layouts/PageLayout.astro'

const winners = [
  {
    name: "Fawaz",
    avatar: "/TEST/assets/images/tnx-min.jpg",
  },
  {
    name: "Musaad",
    avatar: "/TEST/assets/images/default.png",
  },
]
---
<Layout metadata={{ title: "الفائزين — TNX6", ignoreTitleTemplate: true }}>
  <section class="py-24 px-6 text-white">

    <h1 class="text-5xl font-extrabold text-center mb-16 bg-gradient-to-r from-[#ffda6a] to-[#c29200] bg-clip-text text-transparent drop-shadow-lg">
      الفائزون
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-16 max-w-5xl mx-auto">

      {winners.map((winner) => (
        <div class="relative flex flex-col items-center">

          <!-- تاج مضبوط ومتمركز -->
          <svg 
            viewBox="0 0 24 24"
            class="w-12 h-12 absolute -top-[24px] z-20 text-[#ffda6a] left-1/2 -translate-x-1/2
                   drop-shadow-[0_0_6px_rgba(255,215,0,0.4)] transition-all duration-300"
            fill="none"
            stroke="currentColor"
            stroke-width="2.2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M5 16h14v-6l-3 2-3-5-3 5-3-2v6z" />
          </svg>

          <!-- الكارد + الإطار راجع -->
          <div 
            class="group w-full max-w-[150px] aspect-square bg-black/40 border border-[#c29200]/40 
                   rounded-2xl overflow-hidden shadow-xl flex items-center justify-center 
                   relative transition-transform duration-300 hover:scale-110 z-10"
          >
            <img 
              src={winner.avatar} 
              alt={winner.name} 
              class="w-full h-full object-cover"
            />
          </div>

          <p class="mt-4 text-xl font-bold text-[#ffda6a] tracking-wide drop-shadow-[0_0_6px_rgba(255,215,0,0.4)]">
            {winner.name}
          </p>

        </div>
      ))}

    </div>
  </section>
</Layout>

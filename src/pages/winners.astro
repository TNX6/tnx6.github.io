const winners = [
  {
    name: "Fawaz",
    avatar: "/TEST/assets/images/tnx-min.jpg",
  },
]
---
<Layout metadata={{ title: "ÿßŸÑŸÅÿßÿ¶ÿ≤ŸäŸÜ ‚Äî TNX6", ignoreTitleTemplate: true }}>
  <section class="py-24 px-6 text-white">

    <h1 class="text-5xl font-extrabold text-center mb-16 bg-gradient-to-r 
      from-[#ffda6a] to-[#c29200] bg-clip-text text-transparent drop-shadow-lg">
      ÿßŸÑŸÅÿßÿ¶ÿ≤ŸàŸÜ
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-12 max-w-3xl mx-auto">

      {winners.map((winner) => (

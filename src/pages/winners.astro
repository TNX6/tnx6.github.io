---
import Layout from '~/layouts/PageLayout.astro'

const winners = [
  {
    name: "Fawaz",
    avatar: "/TEST/assets/images/tnx-min.jpg",
  },
  {
    name: "Musaad",
    avatar: "/TEST/assets/images/default.png",
  },
]
---

<Layout metadata={{ title: "الفائزين — TNX6", ignoreTitleTemplate: true }}>
  <section class="py-24 px-6 text-white">
    <h1 class="text-5xl font-extrabold text-center mb-16 bg-gradient-to-r 
      from-[#ffda6a] to-[#c29200] bg-clip-text text-transparent drop-shadow-lg">
      الفائزون
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-16 max-w-5xl mx-auto">

      {winners.map((winner) => (
        <div class="relative flex flex-col items-center">

          <!-- التاج -->
          <iconify-icon 
            icon="ph:crown-simple-bold"
            class="text-[#ffda6a] w-12 h-12 absolute -top-[22px] z-30 
                   drop-shadow-[0_0_6px_rgba(255,215,0,0.4)]
                   transition-all duration-300"
          ></iconify-icon>

          <!-- الكارد -->
          <div 
            class="group w-full max-w-[150px] aspect-square bg-black/40 border border-[#c29200]/40 
                   rounded-2xl overflow-hidden shadow-xl flex items-center justify-center 
                   relative transition-transform duration-300 hover:scale-110"
          >
            <img 
              src={winner.avatar} 
              alt={winner.name} 
              class="w-full h-full object-cover"
            />
          </div>

          <!-- الاسم -->
          <p class="mt-4 text-xl font-bold text-[#ffda6a] tracking-wide 
                    drop-shadow-[0_0_6px_rgba(255,215,0,0.4)]">
            {winner.name}
          </p>

        </div>
      ))}

    </div>
  </section>
</Layout>

---
import Layout from '~/layouts/PageLayout.astro'

// قائمة الفائزين — تقدر تعدلها لاحقًا أو تجيبها من API
const winners = [
  {
    name: "Fawaz",
    avatar: "/assets/images/tnx-min.jpg",
  },
  {
    name: "Musaad",
    avatar: "/assets/images/default.png",
  },
]
---

<Layout metadata={{ title: "الفائزين — TNX6", ignoreTitleTemplate: true }}>
  <section class="py-24 px-6 text-white">
    <h1 class="text-5xl font-extrabold text-center mb-16 bg-gradient-to-r 
      from-[#ffda6a] to-[#c29200] bg-clip-text text-transparent drop-shadow-lg">
      الفائزون
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-12 max-w-5xl mx-auto">

      {winners.map((winner) => (
        <div class="relative flex flex-col items-center">
          
          {/* التاج فوق الصورة */}
          <img 
            src="/assets/icons/king.png" 
            alt="Crown" 
            class="w-16 h-16 absolute -top-10 z-20 drop-shadow-[0_0_10px_rgba(255,215,0,0.7)]"
          />

          {/* الكارد */}
          <div class="w-full max-w-[200px] aspect-square bg-black/40 border border-[#c29200]/40 
                      rounded-2xl overflow-hidden shadow-xl relative flex items-center justify-center">

            <img 
              src={winner.avatar} 
              alt={winner.name} 
              class="w-full h-full object-cover"
            />
          </div>

          {/* الاسم */}
          <p class="mt-4 text-xl font-bold text-[#ffda6a] tracking-wide">{winner.name}</p>
        </div>
      ))}
    </div>
  </section>
</Layout>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-10 max-w-4xl mx-auto">
      {winners.map((winner) => (
        <div
          class="user-card group flex flex-col items-center bg-black/30 border border-transparent 

---
import Layout from '~/layouts/PageLayout.astro'

const winners = [
  {
    name: "Fawaz",
    avatar: "/TEST/assets/images/tnx-min.jpg",   // <-- عدلت المسار الصحيح
  },
  {
    name: "Musaad",
    avatar: "/TEST/assets/images/default.png",
  },
]
---

<Layout metadata={{ title: "الفائزين — TNX6", ignoreTitleTemplate: true }}>
  <section class="py-24 px-6 text-white">
    <h1 class="text-5xl font-extrabold text-center mb-16 bg-gradient-to-r 
      from-[#ffda6a] to-[#c29200] bg-clip-text text-transparent drop-shadow-lg">
      الفائزون
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-12 max-w-5xl mx-auto">

      {winners.map((winner) => (
        <div class="relative flex flex-col items-center">

          <!-- التاج -->
          <svg 
            viewBox="0 0 24 24" 
            class="w-12 h-12 absolute -top-14 z-20 text-[#ffda6a]"
            fill="none" 
            stroke="#ffda6a" 
            stroke-width="2" 
            stroke-linecap="round" 
            stroke-linejoin="round"
            style="filter: drop-shadow(0px 0px 4px rgba(255, 215, 0, 0.4));"
          >
            <path d="M3 10l2.5 2 2.5-4 3 5 3-5 2.5 4 2.5-2v8H3v-8z" />
          </svg>

          <!-- الكارد -->
          <div class="w-full max-w-[200px] aspect-square bg-black/40 border border-[#c29200]/40 
                      rounded-2xl overflow-hidden shadow-xl flex items-center justify-center relative">

            <img 
              src={winner.avatar} 
              alt={winner.name} 
              class="w-full h-full object-cover"
            />
          </div>

          <!-- الاسم -->
          <p class="mt-4 text-2xl font-bold text-[#ffda6a] tracking-wide">{winner.name}</p>
        </div>
      ))}
    </div>
  </section>
</Layout>

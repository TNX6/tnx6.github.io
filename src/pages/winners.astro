---
import Layout from '~/layouts/PageLayout.astro'

const winners = [
  { name: "Fawaz", avatar: "/assets/images/tnx-min.jpg" },
  { name: "Musaad", avatar: "/assets/images/default.png" },
  // … تضيف غيرهم
]
---

<Layout metadata={{ title: "الفائزين — TNX6", ignoreTitleTemplate: true }}>
  <section class="py-24 px-6 text-white">
    <h1 class="text-5xl font-extrabold text-center mb-16 
                bg-gradient-to-r from-[#ffda6a] to-[#c29200] bg-clip-text text-transparent drop-shadow-lg">
      الفائزون
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-12 max-w-6xl mx-auto">
      {winners.map((winner) => (
        <div class="flex flex-col items-center">
          
          <div class="relative w-[240px] h-[300px] border border-[#c29200]/40 rounded-2xl 
                      bg-black/20 shadow-lg overflow-hidden group transition-transform duration-300 
                      hover:scale-[1.05]">
            
            {/* تاج أو أيقونة تمييز */}
            <svg viewBox="0 0 24 24" class="absolute -top-6 left-1/2 -translate-x-1/2 
                                        w-12 h-12 text-[#ffda6a] drop-shadow-[0_0_6px_rgba(255,215,0,0.4)]">
              <path d="M3 10l2.5 2 2.5-4 3 5 3-5 2.5 4 2.5-2v8H3v-8z"/>
            </svg>

            {/* الصورة */}
            <div class="w-full h-full flex flex-col items-center pt-12 px-6 pb-6">
              <div class="w-[140px] h-[140px] rounded-xl overflow-hidden border border-[#c29200]/40 shadow-md mb-4">
                <img src={winner.avatar} alt={winner.name} class="w-full h-full object-cover"/>
              </div>
              <p class="text-2xl font-bold text-[#ffda6a] tracking-wide text-center 
                         drop-shadow-[0_0_6px_rgba(255,215,0,0.35)]">
                {winner.name}
              </p>
            </div>

          </div>

        </div>
      ))}
    </div>
  </section>
</Layout>

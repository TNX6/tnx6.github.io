---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Winners — TNX6',
  ignoreTitleTemplate: true,
};

const winners = [
  {
    name: "Fawaz",
    avatar: "/assets/images/tnx-min.jpg",
  },
  {
    name: "Musaad",
    avatar: "/assets/images/default.png",
  },
];
---

<Layout metadata={metadata}>

  <section class="max-w-6xl mx-auto py-16 px-6 text-white">
    
    <h1 class="text-4xl font-extrabold text-center mb-12 
               bg-gradient-to-r from-[#ffda6a] to-[#c29200] 
               bg-clip-text text-transparent 
               drop-shadow-[0_0_10px_rgba(198,164,79,0.5)]">
      Winners
    </h1>

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 
                gap-10 justify-items-center">

      {winners.map((w) => (
        <div class="relative">

          <!-- التاج -->
          <svg viewBox="0 0 24 24"
               class="w-10 h-10 text-[#ffda6a] absolute -top-6 left-1/2 
                      -translate-x-1/2 z-20 
                      drop-shadow-[0_0_6px_rgba(255,215,0,0.45)]
                      transition-transform duration-300 crown">
            <path d="M3 10l2.5 2 2.5-4 3 5 3-5 2.5 4 2.5-2v8H3v-8z" 
                  stroke="#ffda6a" 
                  stroke-width="2.5"
                  fill="none"
                  stroke-linecap="round"
                  stroke-linejoin="round"/>
          </svg>

          <!-- بطاقة الفائز — نفس شكل بطاقة الـ Badge -->
          <div class="winner-card flex flex-col items-center 
                      bg-black/40 border border-[#c6a44f]/30 
                      p-4 rounded-2xl shadow-lg backdrop-blur-sm
                      transition-transform hover:scale-105 
                      hover:border-[#f7e6ac]/60">

            <img src={w.avatar} 
                 class="w-24 h-24 rounded-xl object-cover mb-3 border border-[#c6a44f]/20"/>

            <span class="text-[#f7e6ac] font-semibold text-center text-sm 
                         drop-shadow-[0_0_6px_rgba(255,215,0,0.4)]">
              {w.name}
            </span>

          </div>

        </div>
      ))}

    </div>

  </section>

  <script is:inline>
    document.querySelectorAll(".winner-card").forEach((card) => {
      const crown = card.parentElement.querySelector(".crown");

      card.addEventListener("mouseenter", () => {
        crown.style.transform = "scale(1.15)";
      });

      card.addEventListener("mouseleave", () => {
        crown.style.transform = "scale(1)";
      });
    });
  </script>

</Layout>

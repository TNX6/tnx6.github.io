---
import Layout from '~/layouts/PageLayout.astro'

const winners = [
  {
    name: "Fawaz",
    avatar: "/TEST/assets/images/tnx-min.jpg",
  },
  {
    name: "Musaad",
    avatar: "/TEST/assets/images/default.png",
  },
]
---

<Layout metadata={{ title: "الفائزين — TNX6", ignoreTitleTemplate: true }}>

  <section class="py-24 px-6 text-white">
    <h1 class="text-5xl font-extrabold text-center mb-16 bg-gradient-to-r from-[#ffda6a] to-[#c29200] bg-clip-text text-transparent drop-shadow-lg">
      الفائزون
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-16 max-w-5xl mx-auto">

      {winners.map((winner) => (
        <div class="relative flex flex-col items-center">

          <iconify-icon 
            icon="ph:crown-simple-bold"
            class="text-[#ffda6a] w-12 h-12 absolute -top-[33px] z-30 drop-shadow-[0_0_6px_rgba(255,215,0,0.4)] pointer-events-none">
          </iconify-icon>

          <div 
            class="card relative w-[180px] h-[250px] border border-[#c29200]/35 rounded-[26px] bg-black/25 shadow-lg pt-10 transition-transform duration-300 hover:scale-[1.05] flex flex-col items-center">

            <div class="inner-img-wrapper w-[120px] h-[120px] rounded-2xl overflow-hidden border border-[#c29200]/40 shadow-md mb-4 transition-transform duration-300">
              <img 
                src={winner.avatar}
                alt={winner.name}
                class="w-full h-full object-cover"
              />
            </div>

            <p class="text-xl font-bold text-[#ffda6a] tracking-wide text-center" style="text-shadow: 0 0 6px rgba(255,215,0,0.35);">
              {winner.name}
            </p>

          </div>

        </div>
      ))}

    </div>
  </section>

  <script>
    document.querySelectorAll(".card").forEach((card) => {
      const img = card.querySelector(".inner-img-wrapper")
      card.addEventListener("mouseenter", () => {
        img.style.transform = "scale(1.05)"
      })
      card.addEventListener("mouseleave", () => {
        img.style.transform = "scale(1)"
      })
    })
  </script>

</Layout>

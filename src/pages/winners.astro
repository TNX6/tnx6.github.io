---
import Layout from '~/layouts/PageLayout.astro'

const winners = [
  {
    name: "Fawaz",
    avatar: "/TEST/assets/images/tnx-min.jpg",
  },
  {
    name: "Musaad",
    avatar: "/TEST/assets/images/default.png",
  },
]
---
<Layout metadata={{ title: "الفائزين — TNX6", ignoreTitleTemplate: true }}>
  <section class="py-24 px-6 text-white">

    <h1 class="text-5xl font-extrabold text-center mb-16 bg-gradient-to-r 
      from-[#ffda6a] to-[#c29200] bg-clip-text text-transparent drop-shadow-lg">
      الفائزون
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-14 max-w-4xl mx-auto">

      {winners.map((winner) => (
        <div class="relative flex flex-col items-center">

          <!-- التاج ثابت ما عليه أي تكبير -->
          <svg 
            viewBox="0 0 24 24"
            class="w-14 h-14 absolute -top-9 z-30 text-[#ffda6a]"
            fill="none"
            stroke="#ffda6a"
            stroke-width="2.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            style="filter: drop-shadow(0 0 6px rgba(255, 215, 0, 0.45));"
          >
            <path d="M3 10l2.5 2 2.5-4 3 5 3-5 2.5 4 2.5-2v8H3v-8z" />
          </svg>

          <!-- الإطار يصغر/يكبر لحاله بدون ما يؤثر على التاج ولا الصورة -->
          <div
            class="group card relative w-[220px] h-[290px] border border-[#c29200]/40 
                   rounded-2xl bg-black/30 shadow-md pt-10
                   transition-transform duration-300 ease-out
                   hover:scale-[1.06]"
          >
            <!-- صورة ثابتة ما تتكبر -->
            <div class="w-[130px] h-[130px] mx-auto rounded-xl overflow-hidden 
                        border border-[#c29200]/40 shadow-md mb-4">
              <img 
                src={winner.avatar}
                class="w-full h-full object-cover"
                alt={winner.name}
              />
            </div>

            <p class="text-2xl font-bold text-[#ffda6a] text-center tracking-wide"
               style="text-shadow: 0 0 6px rgba(255,215,0,0.35);">
              {winner.name}
            </p>
          </div>

        </div>
      ))}

    </div>

  </section>
</Layout>

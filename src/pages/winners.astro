  <script>
    const overlay = document.getElementById("winner-overlay");
    const popup = document.getElementById("winner-popup");
    const closeBtn = document.getElementById("close-btn");

    document.querySelectorAll(".card").forEach((card) => {
      const parent = card.parentElement;

      parent.addEventListener("click", () => {
        document.getElementById("popup-name").innerText = parent.dataset.name;
        document.getElementById("popup-avatar").src = parent.dataset.avatar;
        document.getElementById("popup-achievement").innerText = parent.dataset.achievement;

        overlay.style.display = "flex";
      });
    });

    function closeWinnerPopup() {
      overlay.style.display = "none";
    }

    overlay.addEventListener("click", (e) => {
      if (!popup.contains(e.target)) closeWinnerPopup();
    });

    closeBtn.addEventListener("click", (e) => {
      e.stopPropagation();
      closeWinnerPopup();
    });
  </script>


---
import Layout from '~/layouts/PageLayout.astro'

const winners = [
  {
    name: "Fawaz",
    avatar: "/TEST/assets/images/tnx-min.jpg",
  },
  {
    name: "Musaad",
    avatar: "/TEST/assets/images/default.png",
  },
]
---

<Layout metadata={{ title: "الفائزين — TNX6", ignoreTitleTemplate: true }}>
  <section class="py-24 px-6 text-white">
    <h1 class="text-5xl font-extrabold text-center mb-16 bg-gradient-to-r 
      from-[#ffda6a] to-[#c29200] bg-clip-text text-transparent drop-shadow-lg">
      الفائزون
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-12 max-w-4xl mx-auto">

      {winners.map((winner) => (
        <div class="flex flex-col items-center">

          <!-- الكارد نفسه مثل البدج -->
          <div class="w-[180px] h-[220px] bg-black/30 border border-[#c29200]/40 rounded-2xl
                      shadow-md hover:shadow-lg transition-all duration-300 flex flex-col
                      items-center justify-center p-4">

            <!-- الصورة (تصغير وإطار) -->
            <div class="w-[110px] h-[110px] rounded-xl overflow-hidden border border-[#c29200]/40 shadow-md mb-3">
              <img 
                src={winner.avatar}
                alt={winner.name}
                class="w-full h-full object-cover"
              />
            </div>

            <!-- الاسم -->
            <p class="text-xl font-bold text-[#ffda6a] tracking-wide">
              {winner.name}
            </p>
          </div>

        </div>
      ))}
    </div>
  </section>
</Layout>

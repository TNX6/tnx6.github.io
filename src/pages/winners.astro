---
import Layout from '~/layouts/PageLayout.astro'

const winners = [
  {
    name: "king",
    avatar: "/TEST/assets/images/king.png",
  },
  {
    name: "Fawaz",
    avatar: "/TEST/assets/images/tnx-min.jpg",
  },
]
---

<Layout metadata={{ title: "الفائزين — TNX6", ignoreTitleTemplate: true }}>
  <section class="py-24 px-6 text-white">
    
    <h1 class="text-5xl font-extrabold text-center mb-16 bg-gradient-to-r from-[#ffda6a] to-[#c29200] bg-clip-text text-transparent drop-shadow-[0_0_10px_rgba(198,164,79,0.5)]">
      الفائزون
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-10 max-w-5xl mx-auto">

      {winners.map((winner) => (
        <div
          class="flex flex-col items-center bg-black/40 border border-[#c6a44f]/30 
                 p-5 rounded-2xl shadow-lg backdrop-blur-sm
                 transition-transform hover:scale-105 hover:border-[#f7e6ac]/60"
        >
          
          <div class="w-28 h-28 rounded-xl overflow-hidden border border-[#c6a44f]/20 mb-3">
            <img 
              src={winner.avatar}
              alt={winner.name}
              class="w-full h-full object-cover"
            />
          </div>

          <span class="text-[#f7e6ac] font-semibold text-center text-lg">
            {winner.name}
          </span>

        </div>
      ))}

    </div>

  </section>
</Layout>

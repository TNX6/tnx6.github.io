---
import Layout from '~/layouts/PageLayout.astro'

let commands = []
try {
  const res = await fetch('https://tawmae.github.io/tnx-site/api/commands.json')
  commands = await res.json()
} catch (e) {
  console.error(e)
}

const groups = {}
for (const cmd of commands) {
  if (!groups[cmd.Group]) groups[cmd.Group] = []
  groups[cmd.Group].push(cmd)
}
---
<Layout>
  <section class="max-w-5xl mx-auto py-16 px-6 text-white">
    <h1 class="text-4xl font-bold mb-10 text-[#f7e6ac]">Commands</h1>
    {Object.keys(groups).map(group => (
      <div class="mb-10">
        <h2 class="text-2xl font-semibold text-[#c6a44f] mb-4">{group}</h2>
        <ul class="space-y-3">
          {groups[group].map(cmd => (
            <li class="flex justify-between border-b border-[#c6a44f]/20 pb-2">
              <span class="font-bold">{cmd.Name}</span>
              <span class="text-gray-300 text-sm">{cmd.Commands?.[0]}</span>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </section>
</Layout>

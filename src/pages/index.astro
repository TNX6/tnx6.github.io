---
import Layout from '~/layouts/PageLayout.astro'

const metadata = {
  title: 'TNX6 — Twitch Streamer',
  ignoreTitleTemplate: true,
}
---

<Layout metadata={metadata}>

  <!-- Divider الذهبي تحت الهيدر -->
  <div class="w-full h-[1px] bg-gradient-to-r from-[#c6a44f]/40 via-[#ffda6a]/60 to-transparent mb-6"></div>

  <!-- Section الرئيسي بعد تقليل الفراغ py-24 → py-12 -->
  <section class="relative text-center text-white py-12 px-6 bg-gradient-to-b from-black/60 to-transparent">
    <div class="max-w-5xl mx-auto">
      <div class="flex items-center justify-center gap-3 mb-6">
        <iconify-icon icon="tabler:brand-twitch" class="text-[#a67c00] text-5xl"></iconify-icon>
        <h1 class="text-5xl font-extrabold tracking-wide bg-gradient-to-r from-[#ffda6a] to-[#c29200] bg-clip-text text-transparent drop-shadow-lg">
          TNX
        </h1>
      </div>

      <p class="text-lg text-gray-200 mb-10">
        أبحث عن المتعة، الضحك، وتحدي المجتمع… وأبث يوميًا.
      </p>

      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="https://www.twitch.tv/tnx_6"
          target="_blank"
          class="px-8 py-3 rounded-lg text-black font-semibold bg-gradient-to-r from-[#ffda6a] to-[#c29200] hover:opacity-90 transition"
        >
          Follow on Twitch
        </a>

        <a
          href="https://linktr.ee/TNX6"
          target="_blank"
          class="px-8 py-3 rounded-lg border border-[#c29200] text-[#ffda6a] hover:bg-[#c29200]/10 transition"
        >
          All Links
        </a>
      </div>

      <!-- Stream Box محسّن (خلفية + Blur + ظل) -->
      <div class="relative w-full max-w-4xl mx-auto aspect-video rounded-2xl overflow-hidden shadow-xl mt-12 border border-[#c29200]/30 bg-black/40 backdrop-blur-sm">
        <iframe
          src="https://player.twitch.tv/?channel=tnx_6&parent=tnx6.xyz"
          allowfullscreen
          frameborder="0"
          scrolling="no"
          width="100%"
          height="100%"
        ></iframe>
      </div>
    </div>
  </section>

</Layout>

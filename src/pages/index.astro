---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'TNX6 — Twitch Streamer',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Follow on Twitch',
        href: 'https://www.twitch.tv/tnx_6',
        target: '_blank',
        icon: 'tabler:brand-twitch',
      },
      {
        text: 'All Links',
        href: 'https://linktr.ee/TNX6',
        target: '_blank',
        icon: 'tabler:link',
      },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">TNX6</span> Live on Twitch
    </Fragment>

    <Fragment slot="subtitle">
      Watch the stream directly here or join the chat on Twitch.
    </Fragment>

    <Fragment slot="image">
      <div class="relative w-full max-w-4xl mx-auto aspect-video rounded-2xl overflow-hidden shadow-lg">
        <iframe
          src="https://player.twitch.tv/?channel=tnx_6&parent=tawmae.github.io"
          allowfullscreen
          frameborder="0"
          scrolling="no"
          width="100%"
          height="100%"
        ></iframe>
      </div>
    </Fragment>
  </Hero>

  <Content
    tagline="About TNX6"
    title="Streamer. Creator. Community."
    items={[
      {
        title: 'Interactive Stream Commands',
        description: 'Discover fun chat commands, sound effects, and interactive Twitch Point rewards.',
      },
      {
        title: 'Badges & Items',
        description: 'Unlock collectible badges and special items through stream challenges and events.',
      },
      {
        title: 'Community Challenges',
        description: 'Join global stream goals and community events directly on Twitch.',
      },
    ]}
    image={{
      src: 'https://static-cdn.jtvnw.net/jtv_user_pictures/b85ce088-8b2a-4efb-b165-dc2b25481f0f-profile_image-300x300.png',
      alt: 'TNX6 Twitch Avatar',
      width: 300,
      height: 300,
    }}
  >
    <Fragment slot="content">
      <p class="text-lg leading-relaxed">
        <strong>TNX6</strong> brings interactive Twitch streaming to the next level — powered by Streamer.bot and custom integrations.
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-[#111827] dark:bg-transparent"></div>
    </Fragment>
  </Content>
</Layout>

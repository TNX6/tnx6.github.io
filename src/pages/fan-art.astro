---
const artworks = [
  { artist: "Anyang", discord: "Anyang", image: "/FANART/Anyang.webp" },

  // رسمتين من MARIYO
  { artist: "Mariyo", discord: "Mariyo", image: "/FANART/Mariyo.webp" },
  { artist: "Mariyo", discord: "Mariyo", image: "/FANART/Mariyo.png" },

  { artist: "NORH", discord: "NORH", image: "/FANART/NORH.webp" },
  { artist: "kanai", discord: "kanai", image: "/FANART/kanai.webp" },
  { artist: "pekz0", discord: "pekz0", image: "/FANART/pekz0.webp" },
];
---

<main class="page">
  <header class="header">
    <h1 class="title">Fan Art Gallery</h1>
    <p class="subtitle">Credits ظاهرة على كل صورة.</p>
  </header>

  <section class="gallery" aria-label="Fan art gallery">
    {artworks.map((a) => (
      <article class="card" tabindex="0" aria-label={`Fan art by ${a.artist}`}>
        <img class="img" src={a.image} alt={`Fan art by ${a.artist}`} loading="lazy" />
        <div class="credit">
          <div class="credit__name">{a.artist}</div>
          <div class="credit__handle">@{a.discord}</div>
        </div>
      </article>
    ))}
  </section>
</main>

<style>
  .page { max-width: 1100px; margin: 0 auto; padding: 48px 16px; }
  .header { margin-bottom: 18px; }
  .title { font-size: 30px; font-weight: 800; margin: 0; letter-spacing: -0.02em; }
  .subtitle { margin: 10px 0 0; opacity: 0.75; font-size: 14px; }

  .gallery {
    display: grid;
    gap: 14px;
    grid-template-columns: repeat(1, minmax(0, 1fr));
    margin-top: 18px;
  }
  @media (min-width: 640px) { .gallery { grid-template-columns: repeat(2, 1fr); } }
  @media (min-width: 1024px) { .gallery { grid-template-columns: repeat(3, 1fr); } }

  .card {
    position: relative;
    overflow: hidden;
    border-radius: 18px;
    min-height: 260px;
    background: rgba(255,255,255,0.04);
    box-shadow: 0 10px 30px rgba(0,0,0,0.35);
    outline: none;
    transform: translateZ(0);
    transition: opacity 220ms ease, transform 220ms ease, filter 220ms ease;
  }

  .img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: translateZ(0);
    transition: transform 220ms ease, filter 220ms ease;
  }

  .card::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(0,0,0,0.06) 0%,
      rgba(0,0,0,0.22) 55%,
      rgba(0,0,0,0.65) 100%
    );
    opacity: 0.75;
    transition: opacity 220ms ease;
  }

  .credit {
    position: absolute;
    left: 12px;
    bottom: 12px;
    z-index: 2;
    display: grid;
    gap: 2px;
    padding: 8px 10px;
    border-radius: 12px;
    background: rgba(0,0,0,0.55);
    backdrop-filter: blur(10px);
    color: #fff;
    max-width: calc(100% - 24px);
  }

  .credit__name {
    font-weight: 800;
    font-size: 13px;
    line-height: 1.1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .credit__handle {
    font-size: 12px;
    opacity: 0.85;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  @media (hover: hover) and (pointer: fine) {
    .card:hover .img,
    .card:focus-visible .img {
      transform: scale(1.10);
      filter: saturate(1.2) contrast(1.05);
    }

    .card:hover::after,
    .card:focus-visible::after {
      opacity: 0.55;
    }

    /* يخفي الباقي عند hover */
    @supports selector(:has(*)) {
      .gallery:has(.card:hover) .card {
        opacity: 0;
        pointer-events: none;
        transform: scale(0.98);
        filter: blur(10px);
      }
      .gallery:has(.card:hover) .card:hover {
        opacity: 1;
        pointer-events: auto;
        transform: scale(1.02);
        filter: none;
      }
    }

    /* fallback */
    @supports not selector(:has(*)) {
      .gallery:hover .card { opacity: 0.08; }
      .gallery:hover .card:hover { opacity: 1; }
    }
  }
</style>

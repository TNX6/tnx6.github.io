---
const artworks = [
  {
    artist: "ArtistName1",
    handle: "@artist1",
    platform: "X / Twitter",
    link: "https://example.com/post/1",
    image: "/fanart/artist1-01.jpg",
    title: "Fan Art #1",
    date: "2026-01-20",
  },
  {
    artist: "ArtistName2",
    handle: "@artist2",
    platform: "TikTok",
    link: "https://example.com/post/2",
    image: "/fanart/artist2-01.jpg",
    title: "Fan Art #2",
    date: "2026-01-18",
  },
];

// اختياري: ترتيب من الأحدث للأقدم
artworks.sort((a, b) => (a.date < b.date ? 1 : -1));
---

<main class="mx-auto max-w-6xl px-4 py-12">
  <header class="mb-8">
    <h1 class="text-3xl font-bold tracking-tight">Fan Art Gallery</h1>
    <p class="mt-2 text-sm opacity-80">
      Credits محفوظة لأصحاب الرسومات — اضغط على أي كرت لفتح المصدر.
    </p>
  </header>

  <ul class="card-grid">
    {artworks.map((a) => (
      <li class="card">
        <a class="card__link" href={a.link} target="_blank" rel="noreferrer">
          <span
            class="card__background"
            style={`background-image:url('${a.image}')`}
            aria-hidden="true"
          ></span>

          <span class="card__content">
            <span class="card__title">{a.title}</span>
            <span class="card__meta">
              <span class="card__artist">{a.artist}</span>
              <span class="card__sep">·</span>
              <span class="card__handle">{a.handle}</span>
              <span class="card__sep">·</span>
              <span class="card__platform">{a.platform}</span>
            </span>
          </span>
        </a>
      </li>
    ))}
  </ul>
</main>

<style>
  /* Layout */
  .card-grid {
    display: grid;
    gap: 16px;
    grid-template-columns: repeat(1, minmax(0, 1fr));
  }
  @media (min-width: 640px) {
    .card-grid { grid-template-columns: repeat(2, minmax(0, 1fr)); }
  }
  @media (min-width: 1024px) {
    .card-grid { grid-template-columns: repeat(3, minmax(0, 1fr)); }
  }

  .card {
    position: relative;
    border-radius: 18px;
    overflow: hidden;
    background: rgba(255,255,255,0.04);
    box-shadow: 0 10px 30px rgba(0,0,0,0.35);
    min-height: 260px;
  }

  .card__link {
    display: block;
    height: 100%;
    position: relative;
    outline: none;
  }

  .card__background {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    transform: translateZ(0);
    transition: transform 220ms ease, filter 220ms ease;
  }

  /* Overlay */
  .card__background::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(0,0,0,0.15) 0%,
      rgba(0,0,0,0.55) 60%,
      rgba(0,0,0,0.75) 100%
    );
    opacity: 0.35;
    transition: opacity 220ms ease;
  }

  .card__content {
    position: relative;
    z-index: 1;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 16px;
    color: #fff;
  }

  .card__title {
    font-weight: 800;
    font-size: 18px;
    line-height: 1.15;
    text-shadow: 0 6px 18px rgba(0,0,0,0.5);
  }

  .card__meta {
    margin-top: 8px;
    font-size: 12px;
    opacity: 0.9;
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }

  .card__sep { opacity: 0.6; }

  /* نفس حركة التيك توك تقريبًا */
  @media (hover: hover) and (pointer: fine) {
    .card:hover .card__background,
    .card__link:focus-visible .card__background {
      transform: scale(1.12) translateZ(0);
      filter: brightness(1) saturate(1.4) contrast(1);
    }

    .card:hover .card__background::after,
    .card__link:focus-visible .card__background::after {
      opacity: 0.6;
    }

    .card-grid:hover > .card:not(:hover) .card__background {
      filter: brightness(0.4) saturate(0.2) contrast(1.3) blur(8px);
    }

    .card-grid:hover > .card:not(:hover) .card__background::after {
      opacity: 0.9;
    }
  }
</style>

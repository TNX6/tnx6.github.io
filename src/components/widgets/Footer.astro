---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import { getHomePermalink } from '~/utils/permalinks';

const socialLinks = [
  { ariaLabel: 'Twitch', icon: 'mdi:twitch', href: 'https://www.twitch.tv/tnx_6' },
  { ariaLabel: 'Instagram', icon: 'mdi:instagram', href: 'https://www.instagram.com/itstnx6/' },
  { ariaLabel: 'TikTok', icon: 'ic:baseline-tiktok', href: 'https://www.tiktok.com/@itstnx?is_from_webapp=1&sender_device=pc' },
  { ariaLabel: 'Donations', icon: 'mdi:currency-usd', href: 'https://tip.dokan.sa/tstnx' },
  { ariaLabel: 'Linktree', icon: 'mdi:link', href: 'https://linktr.ee/TNX6' },
  { ariaLabel: 'Kick', icon: 'simple-icons:kick', href: 'https://kick.com/tnx6' },
  { ariaLabel: 'YouTube', icon: 'mdi:youtube', href: 'https://www.youtube.com/@TNX66' },
];
---

<footer class="relative border-t border-gray-800 bg-[#0b0c10] text-gray-400">
  <div class="max-w-7xl mx-auto px-6 py-10 text-center">
    <a class="inline-block font-bold text-2xl mb-3 text-white" href={getHomePermalink()}>
      {SITE?.name || 'TNX6 Twitch'}
    </a>
    <p class="text-sm mb-6">© {new Date().getFullYear()} TNX6 — All rights reserved.</p>

    <ul class="flex justify-center flex-wrap gap-4">
      {socialLinks.map(({ ariaLabel, href, icon }) => (
        <li>
          <a
            class="text-gray-400 hover:text-white transition-colors duration-200"
            aria-label={ariaLabel}
            href={href}
            target="_blank"
            rel="noopener noreferrer"
          >
            <Icon name={icon} class="w-6 h-6" />
          </a>
        </li>
      ))}
    </ul>
  </div>
</footer>

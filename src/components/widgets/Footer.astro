---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import { getHomePermalink } from '~/utils/permalinks';

const socialLinks = [
  { ariaLabel: 'Twitch', icon: 'tabler:brand-twitch', href: 'https://www.twitch.tv/tnx_6' },
  { ariaLabel: 'Instagram', icon: 'tabler:brand-instagram', href: 'https://www.instagram.com/itstnx6/' },
  { ariaLabel: 'TikTok', icon: 'tabler:brand-tiktok', href: 'https://www.tiktok.com/@itstnx?is_from_webapp=1&sender_device=pc' },
  { ariaLabel: 'Donations', icon: 'tabler:currency-dollar', href: 'https://tip.dokan.sa/tstnx' },
  { ariaLabel: 'Linktree', icon: 'tabler:link', href: 'https://linktr.ee/TNX6' },
  { ariaLabel: 'Kick', icon: 'tabler:brand-kick', href: 'https://kick.com/tnx6' },
  { ariaLabel: 'YouTube', icon: 'tabler:brand-youtube', href: 'https://www.youtube.com/@TNX66' },
];
---

<footer class="relative border-t border-gray-200 dark:border-slate-800 not-prose">
  <div class="dark:bg-dark absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div
    class="relative max-w-7xl mx-auto px-4 sm:px-6 dark:text-slate-300 intersect-once intersect-quarter intersect-no-queue motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
  >
    <div class="grid grid-cols-12 gap-4 py-8 md:py-12">
      <div class="col-span-12 text-center">
        <a class="inline-block font-bold text-2xl mb-3 text-white" href={getHomePermalink()}>
          {SITE?.name || 'TNX6'}
        </a>
        <p class="text-sm text-gray-400">© {new Date().getFullYear()} TNX6 — All rights reserved.</p>
      </div>
    </div>

    <div class="flex justify-center py-6 md:py-8">
      <ul class="flex gap-4 flex-wrap justify-center">
        {socialLinks.map(({ ariaLabel, href, icon }) => (
          <li>
            <a
              class="text-gray-400 hover:text-white bg-gray-800 hover:bg-gray-700 rounded-full p-3 transition"
              aria-label={ariaLabel}
              href={href}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Icon name={icon} class="w-5 h-5" />
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</footer>
